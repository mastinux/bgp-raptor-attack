# By default, Authorities are not configured as exits
Authority = Node(tag="authority", authority=1, relay=1, torrc="authority.tmpl")
NonExitRelay = Node(tag="guard", relay=1, torrc="relay-non-exit.tmpl")
ExitRelay = Node(tag="exit", relay=1, exit=1, torrc="relay.tmpl")
Client = Node(tag="client", client=1, torrc="client.tmpl")

NODES = Authority.getN(1) + NonExitRelay.getN(1) + ExitRelay.getN(1) + Client.getN(1)

ConfigureNodes(NODES)
